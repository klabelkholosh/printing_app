{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
        <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}
<div class="panel panel-default">
  <div class="panel-heading"><h4>Purchase Order</h4></div>
   <div class="panel-body">
    
    <form method="get">
    <table>

    <tr>
      <label class="control-label col-sm-2 requiredField" for="date">
       Date
       <span class="asteriskField">
        *
       </span>
      </label>
      
         <i class="fa fa-calendar" >
         </i>
        <input class="form-control" id="" name="date" widget= "single_text" placeholder="DD-MM-YYYY" type="date" />
       
    </tr> 

    <tr>
        <th>
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group">
                    <input type="text" class="form-control" name="supplier_name" placeholder="Supplier Name" style="margin-top:15px">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit" style="margin-top:15px"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        </th>

    <th>
    </tr>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>Suppliername</th>
                <th>Suppliercode</th>
                <th><input type="submit" value="Add" class="btn btn-primary"/></th>
            </tr>
        </thead>
        <tbody>
        {% for supplier in suppliers %}
            <tr>
                <td><a href="{{ path('supplier_show', { 'suppliercode': supplier.suppliercode }) }}">{{ supplier.suppliername }}</a></td>
                <td>{{ supplier.suppliercode }}</td>
                <td>
                  
                    <input type="checkbox" name="supplier_id[]" value="{{supplier.suppliercode }}">
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</form>
  <div class="navigation text-center">     
    {{ knp_pagination_render(suppliers) }}
</div>   
                  </div><!-- .Panel Content -->
      </div>
{% include 'footer.html.twig' %}
{% endblock %}
