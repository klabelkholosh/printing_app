{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">Machines list</h1>
    <a href="{{ path('machine_new') }}" class="btn btn-primary">Create a new machine</a>
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Hourlyrate</th>
                <th>Machinecode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td><a href="{{ path('machine_show', { 'machinecode': machine.machinecode }) }}">{{ machine.description }}</a></td>
                <td>{{ machine.hourlyrate }}</td>
                <td>{{ machine.machinecode }}</td>
                <td>

                            <a href="{{ path('machine_show', { 'machinecode': machine.machinecode }) }}" class="btn btn-success">show</a>
                       
                            <a href="{{ path('machine_edit', { 'machinecode': machine.machinecode }) }}" class="btn btn-primary">edit</a>
                       
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
            
   
{% endblock %}
