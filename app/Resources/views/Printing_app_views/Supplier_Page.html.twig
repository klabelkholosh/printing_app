
{% extends 'base.html.twig' %}

{% block body %}

<table class="table"> 
<h2 class='page-header'>Customer Details</h2>
 <thead>
  <tr> 
  <th>Customer Code</th> 
  <th>Customer Name</th> 
  <th>Status</th> 
  <th></th>
  </tr> </thead>
  <tbody>
  {% for customer in customers %} 
  <tr>
   <th scope="row">{{customer.customercode}}</th> 
   <td>{{customer.name}}</td> 
   <td>{{customer.status}}</td> 
   <td>
   <a href="/Matirial/{{customer.customercode}}/" class = "btn btn-primary">Add Address</a>
   <a href="/Customer_Page/CustomerDetail/{{customer.customercode}}" class = "btn btn-success">View</a>
   <a href="/Customer_Page/EditCustomer/{{customer.customercode}}/" class = "btn btn-primary">Edit</a>
   <a href="/Customer_Page/DeleteCustomer/{{customer.customercode}}" class = "btn btn-danger">Delete</a>
   </td>
  </tr> 
 
  {% endfor%} 
  </tbody> 
</table>
     
{% endblock %}

