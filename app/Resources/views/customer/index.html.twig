{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">Customers list</h1>
   <a href="{{ path('customer_new') }}" class="btn btn-primary">Create a new customer</a>
    <table class="table">
        <thead>
        <tr>
                <th>
                <div class="row">
                    <div class="col-lg-10">
                        <div class="input-group">
                            <input type="text" class="form-control" name="customercode" placeholder="Customer Code">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                            </span>
                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-6 -->
                </div><!-- /.row -->
                </th>

                <th>
                <div class="row">
                  <div class="col-lg-10">
                     <div class="input-group">
                        <input type="text" class="form-control" name="name" placeholder="Customer name">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                      </div><!-- /input-group -->
                   </div><!-- /.col-lg-6 -->
                 </div><!-- /.row -->
                </th>
                <th></th>
                <th></th>
                <th></th>

             
            </tr>
            <tr>
                <th>Customercode</th>
                <th>Name</th>
                <th>Status</th>
                <th>Email Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.customercode }}</td>
                <td><a href="{{ path('customer_show', { 'customercode': customer.customercode }) }}">{{ customer.name }}</a></td>
                <td>{{ customer.status }}</td>
                <td>{{ customer.loginemail }}</td>
                <td>
                   
                            <a href="{{ path('customer_show', { 'customercode': customer.customercode }) }}" class="btn btn-success">show</a>
                        
                            <a href="{{ path('customer_edit', { 'customercode': customer.customercode }) }}" class="btn btn-primary">edit</a>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            

{% endblock %}
