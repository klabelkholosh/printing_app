{% extends 'base.html.twig' %}

{% block body %}
<a href="{{ path('customer_index') }}" class="btn btn-default">Back to the list</a>
<h3 class="page-header">Customer Details</h3>
<div>
<a href="{{ path('select_address', { 'customercode': customer.customercode }) }}" class="btn btn-primary">Add Address</a>
