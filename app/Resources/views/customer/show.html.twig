            </tr>
            <tr>
                <th>Customercode</th>
                <td>{{ customer.customercode }}</td>
            </tr>
            <tr>
            <th>Email Address</th>
                <td>{{ customer.loginemail }}</td>
            </tr>
        </tbody>
       


        <tbody>
           <tr>
            <th>Addresses</th>
           </tr>
