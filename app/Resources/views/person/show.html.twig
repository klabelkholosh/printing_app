{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('person_index') }}" class = "btn btn-default">Back to the list</a>
    <h1 class="page-header">Person Details</h1>
 
    <table class="table">
        <tbody >
           <tr>
                <th scope="row">Personcode</th>
                <td >{{ person.personcode }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ person.phone }}</td>
            </tr>
            <tr>
                <th>Fingerprint</th>
                <td>{{ person.fingerprint }}</td>
            </tr>

        </tbody>
    </table>


            <a href="{{ path('person_edit', { 'personcode': person.personcode }) }}" class = "btn btn-primary">Edit</a>
     
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class = "btn btn-danger">
            {{ form_end(delete_form) }}

{% endblock %}
